<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/edit_widget_normal_action"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <ImageView
        android:id="@+id/edit_widget_normal_icon"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/edit_widget_normal_action"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/edit_widget_normal_name"
        android:textSize="15sp"
        android:textColor="@color/black_trans_80"
        android:layout_toRightOf="@id/edit_widget_normal_icon"
        android:layout_width="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />

</RelativeLayout>